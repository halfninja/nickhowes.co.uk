---
export type Props = {
  class?: string;
}

const { class: clazz } = Astro.props as Props;
---
<section class={`card ${clazz}`}>
  <div class="card-content">
    <slot />
  </div>
  <div class="card-footer">
    <div class="card-content">
      <slot name="footer" />
    </div>
  </div>
</section>
<style>
.card {
  background-color: white;
  margin: 1rem auto;
  width: 400px;
  max-width: 100%;
  border-radius: 2px;
  box-shadow: 
    0 2px 10px 0 rgba(0,0,0,0.14), 
    0 1px 5px 0 rgba(0,0,0,0.12), 
    0 3px 1px -2px rgba(0,0,0,0.2);
  color: #333;
}

.card-content {
  padding: 20px;
}

.card-footer {
  border-top: 1px solid #999;
  background-color: #f9f9f9;
}

</style>