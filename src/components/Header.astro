---
import Nav from './Nav.astro'

const { current = '' } = Astro.props;
const homePage = current === 'home';
---

<style>
  header {
    display: flex;
    margin: 0 auto;
    max-width: 1400px;
    padding: 2em;
    width: 100%;
  }

  @media (max-width: 640px)  {
    header {
      flex-direction: column-reverse;
      align-items: center;
      gap: 1rem;
      padding: 1rem;
    }
  }

  h1 {
    font-size: 2rem;
  }
</style>

<header>
  {/* <Logo /> */}
  {homePage ? '' : <h1><a href="/">Nick Howes</a></h1>}
  <Nav current={current} />
</header>
